SELECT B.CF$_ID_VENDEDOR ID_REPRESENTANTE,
       IFSLAF.person_info_api.Get_Name(person_id_ => b.CF$_ID_VENDEDOR) DESC_REPRESENTANTE,
       b.CF$_PERIODO_COMISSAO DATA_REFERENCIA,
       b.CF$_TIPO_PAGAMENTO TIPO_PAGAMENTO,
       b.CF$_VALOR_PAGO VALOR_PAGO
       

FROM IFSLAF.LAFCOMMISSIONHISTORY_CLV B
