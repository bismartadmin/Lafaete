select 
ID_PESSOA,
DESC_PESSOA,
ID_CRACHA,
ID_EMPRESA,
ID_SITE,
TO_DATE(DATA_MARCACAO, 'DD/MM/RRRR') DATA_MARCACAO,
TO_DATE(DATA_MARCACAO_FINAL, 'DD/MM/RRRR') DATA_MARCACAO_FINAL,
TO_CHAR(ID_INDICE) ID_INDICE,
FERIADO,
T1_ENTRADA_DH T1_ENTRADA,
T1_SAIDA_DH T1_SAIDA,
T2_ENTRADA_DH T2_ENTRADA,
T2_SAIDA_DH T2_SAIDA,
JORNADA,
CASE WHEN PONTO_BATIDO = 0 THEN 'Nao batido' ELSE 'Batido' END PONTO_BATIDO
from ifslaf.hum_f_marcacao_ponto
