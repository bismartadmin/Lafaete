SELECT A.ACTIVITY_NO                                                        ID_ATIVIDADE,
       A.CF$_OPPORTUNITY_NO                                                 ID_OPORTUNIDADE,
       A.DESCRIPTION                                                        DESCRICAO,
       A.COMPANY                                                            EMPRESA,
       A.START_DATE_TIME_ZONE                                               DATA_INICIO,
       A.END_DATE_TIME_ZONE                                                 DATA_FIM,
       A.DATE_ENTERED                                                       DATA_CRIACAO,
       IFSLAF.Business_Activity_Type_API.Get_Description(A.ACTIVITY_TYPE)   TIPO_ATIVIDADE,
       A.CONNECTION_ID                                                      ID_CLIENTE,
       A.CONNECTION_TYPE                                                    CATEGORIA_CLIENTE,
       A.CALENDAR_ACTIVITY_TYPE                                             TIPO_CALENDARIO,
       A.PRIORITY                                                           PRIORIDADE,
       IFSLAF.Person_Info_API.Get_Name(A.MAIN_CONTACT_ID)                   DESC_CONTATO,
       A.MAIN_REPRESENTATIVE_ID                                             ID_REPRESENTANTE,
       IFSLAF.Person_Info_API.Get_Name(A.MAIN_REPRESENTATIVE_ID)            DESC_REPRESENTANTE,
       A.STATE                                                              STATUS,
       A.CF$_COMMERCIAL_SERVICE                                             NOTA_COMERCIAL,
       a.CF$_NPS_ANSWER                                                     NOTA_NPS,
       dbms_lob.substr(A.NOTE, 2000, 1)                                     NOTAS
  FROM IFSLAF.BUSINESS_ACTIVITY_CFV A
