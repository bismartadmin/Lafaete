SELECT A.COMPANY,
               A.PARENT_COMPANY,
               A.PAYMENT_ID,
               A.SERIES_ID,
               B.TRANS_ID,
               IFSLAF.PAYMENT_PER_CURRENCY_API.GET_SHORT_NAME(A.COMPANY, A.SERIES_ID, A.PAYMENT_ID, A.CURRENCY) AS SHORT_NAME,
               A.VOUCHER_NO,
               A.VOUCHER_DATE,
               A.PAY_DATE,
               A.VOUCHER_TYPE,
               A.PAYMENT_TYPE_CODE,
               B.LEDGER_ITEM_ID,
               B.INSTALLMENT_ID,
               IFSLAF.PAYMENT_PLAN_API.GET_C_INVOICE_TYPE_ID(D.COMPANY, D.INVOICE_ID, D.INSTALLMENT_ID) AS TIPO_TITULO,
               D.LEDGER_DATE,
               D.DUE_DATE C_DUE_DATE,
               D.DUE_DATE,
               B.IDENTITY,
               B.NAME,
               IFSLAF.LEDGER_TRANSACTION_API.GET_PARTY_TYPE(B.COMPANY, A.SERIES_ID, A.PAYMENT_ID, B.TRANS_ID) AS ESPECIE_PARCEIRO,
               IFSLAF.IDENTITY_INVOICE_INFO_API.GET_IDENTITY_TYPE(B.COMPANY, B.IDENTITY, IFSLAF.LEDGER_TRANSACTION_API.GET_PARTY_TYPE(B.COMPANY, A.SERIES_ID, A.PAYMENT_ID, B.TRANS_ID)) AS TIPO_PARCEIRO,
               B.PAYER_IDENTITY,
               C.CODE_A,
               C.CODE_B,
               C.CODE_C,
               C.CODE_D,
               C.CODE_E,
               C.CODE_F,
               C.CODE_G,
               C.CODE_H,
               C.CODE_I,
               C.CODE_J,
               --abs(C.DOM_AMOUNT) DOM_AMOUNT,
              CASE WHEN C.POSTING_TYPE = 'PP13' THEN C.DOM_AMOUNT ELSE CASE WHEN SIGN(A.CURR_AMOUNT) = -1 AND SIGN(B.TICKED_OF_AMOUNT) = -1 THEN -C.DOM_AMOUNT ELSE abs(C.DOM_AMOUNT) END  END DOM_AMOUNT,
--               ROUND(NVL(C.PAID_AMOUNT - NVL(B.USED_DISCOUNT, 0), 0) * NVL(B.CURR_RATE,1)) AS DOM_AMOUNT,
               CASE WHEN SIGN(A.CURR_AMOUNT) = -1 AND SIGN(B.TICKED_OF_AMOUNT) = -1 THEN 'Entrada' ELSE CASE WHEN C.POSTING_TYPE IN ('PP16','PP13') THEN 'Saida' ELSE CASE SIGN(C.DOM_AMOUNT) WHEN 1 THEN 'Saida' ELSE 'Entrada' END END END AS TIPO_MOVIMENTO,
               A.OBJVERSION,
               C.POSTING_TYPE,
               c.text AS OBS,
               'G' AS BLOCO_CODIGO, -- IDENTIFICA TODOS OS PAGAMENTOS DE CLIENTE (CUPAY), MAS NAO CONSIDERA MULTAS E JUROS
               D.ADV_INV AS ADV_INV,
               D.LEDGER_ITEM_SERIES_ID AS ID_SERIE
          FROM IFSLAF.PAYMENT_PER_CURRENCY_SU_QRY A
         INNER JOIN IFSLAF.LEDGER_TRANSACTION_SU_QRY  B ON (A.COMPANY = B.COMPANY AND A.SERIES_ID = B.SERIES_ID AND A.PAYMENT_ID = B.PAYMENT_ID)
         INNER JOIN IFSLAF.PAY_ACCOUNTING_ROW_SU_QRY  C ON (B.COMPANY = C.COMPANY AND B.SERIES_ID = C.SERIES_ID AND B.PAYMENT_ID = C.PAYMENT_ID AND B.TRANS_ID = C.TRANS_ID)
         left JOIN IFSLAF.SUPP_INV_INTEREST_FINE_QRY D ON (B.COMPANY = D.COMPANY AND B.IDENTITY = D.IDENTITY AND B.PARTY_TYPE_DB = D.PARTY_TYPE_DB AND B.LEDGER_ITEM_ID = D.LEDGER_ITEM_ID AND B.LEDGER_ITEM_SERIES_ID = D.LEDGER_ITEM_SERIES_ID AND B.LEDGER_ITEM_VERSION = D.LEDGER_ITEM_VERSION AND B.INSTALLMENT_ID = D.INSTALLMENT_ID)
        WHERE (A.SERIES_ID = 'SUPAY')
          AND (A.VOUCHER_TYPE IN ('B', 'N', 'U','GF'))
/*   AND (B.LEDGER_ITEM_SERIES_ID IN ('CD', 'CI', 'EX', 'NC', 'CAMBIO', 'FI','ND') 
        OR 
        (B.LEDGER_ITEM_SERIES_ID = 'CUPIA' AND C.POSTING_TYPE = 'PP36')
    )*/
         AND (A.PAYMENT_TYPE_CODE_DB IN ('SUPPOFF', 'SUPPPAY', 'AUTOPAY') OR A.PAYMENT_TYPE_CODE_DB = 'SUPIA' AND C.POSTING_TYPE = 'PP37')
         AND (B.CORRECTION = 'FALSE')
         AND (A.MULTI_COMPANY_PAY_EXIST = 'FALSE')

                        AND (EXISTS(SELECT 1
                         FROM IFSLAF.CASH_TRANSACTION Z 
                        WHERE (C.COMPANY = Z.COMPANY)
                          AND (C.SERIES_ID = Z.SERIES_ID)
                          AND (C.PAYMENT_ID = Z.PAYMENT_ID)
                          AND (Z.ROLLEDBACK = 'FALSE')))
    AND C.POSTING_TYPE IN ('IP1','PP13')
    AND IFSLAF.PAYMENT_PER_CURRENCY_API.GET_SHORT_NAME(A.COMPANY, A.SERIES_ID, A.PAYMENT_ID, A.CURRENCY) IS NOT NULL
           AND (EXISTS(SELECT 1
                         FROM IFSLAF.CASH_TRANSACTION_CU_QRY Z 
                        WHERE (Z.COMPANY = A.COMPANY)
                          AND (Z.SERIES_ID = A.SERIES_ID)
                          AND (Z.PAYMENT_ID = A.PAYMENT_ID)
                          AND (Z.VOUCHER_DATE = A.VOUCHER_DATE)))
